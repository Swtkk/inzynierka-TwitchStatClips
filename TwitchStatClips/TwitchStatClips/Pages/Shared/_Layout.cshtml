@using TwitchStatClips.TwitchService
@inject TwitchTokenService TokenService

@{
    var token = TokenService.GetToken();
    var isUserLoggedIn = token != null && !string.IsNullOrEmpty(token.RefreshToken);
    var userInfo = isUserLoggedIn ? await TokenService.GetUserInfoAsync() : (Name: null, AvatarUrl: null);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TwitchStatClips</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TwitchStatClips.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">TwitchStatClips</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        @await Html.PartialAsync("_GameDropdown")
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Tools/UserLookup">Szukaj użytkownika</a>
                        </li>


                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (isUserLoggedIn)
                        {
                            <li class="nav-item d-flex align-items-center me-3">
                                <img src="@userInfo.AvatarUrl" class="rounded-circle me-2" alt="Avatar" width="32" height="32" />
                                <span>@userInfo.Name</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-page="/Logout">
                                    <a class="btn btn-outline-secondary btn-sm" asp-page="/Auth/Logout">Wyloguj</a>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary btn-sm" href="/auth/twitch/login">Zaloguj się przez Twitch</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TwitchStatClips - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
