<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TwitchStatClips</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/TwitchStatClips.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <meta http-equiv="Cache-Control" content="no-store" />
</head>
<body>
    <div id="ambient-bg" aria-hidden="true"></div>
    @* <div id="ambient-orbs" aria-hidden="true"> *@
        @* <span class="orb orb-1"></span> *@
        @* <span class="orb orb-2"></span> *@
    @* </div> *@
    <header>
        <nav class="navbar navbar-expand-sm app-navbar sticky-top border-bottom p-4">
            <div class="container">
                <a class="navbar-brand app-brand fs-4" asp-area="" asp-page="/Index">TwitchStatClips</a>

                <button class="navbar-toggler app-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between app-nav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link fs-5" asp-page="/Index">Strona Główna</a></li>
                        <li class="nav-item"><a class="nav-link fs-5" asp-page="/Privacy">Privacy</a></li>
                        <li class="nav-item dropdown nav-tools">
                            <a class="nav-link fs-5 dropdown-toggle"
                               href="#"
                               id="toolsDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Narzędzia
                            </a>

                            <ul class="dropdown-menu shadow-lg" aria-labelledby="toolsDropdown">
                                <li><a class="dropdown-item" asp-page="/Tools/UserLookup">Konwerter</a></li>
                                <li><a class="dropdown-item" asp-page="/Tools/DownloadClip">Pobierz klip</a></li>
                            </ul>
                        </li>
                        @* @if (isUserLoggedIn)
                        {
                            <li class="nav-item"><a class="nav-link fs-5" asp-page="/Tools/FavoriteClips">Ulubione klipy</a></li>
                        } *@
                        @if (isAuth)
                        {
                            <li class="nav-item"><a class="nav-link fs-5" asp-page="/Tools/FavoriteClips">Ulubione klipy</a></li>
                        }
                        <li class="nav-item">
                            <a class="nav-link fs-5" asp-page="/Tools/StreamerStatsAll">
                                Statystyki
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (isAuth)
                        {
                            <li class="nav-item d-flex align-items-center me-3 fs-4">
                                <img src="@avatar" class="rounded-circle me-2" alt="Avatar" width="40" height="40" />
                                <span>@userName</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-page="/Logout">
                                    <a class="btn btn-outline-secondary btn-sm fs-5 p-2" href="/auth/twitch/logout">Wyloguj</a>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary btn-sm fs-5 p-2" href="/auth/twitch/login">Zaloguj się przez Twitch</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <main role="main" class="flex-grow-1">
        <div class="container pb-3">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TwitchStatClips - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // serwerowy boole
        window.isLoggedIn = @(User?.Identity?.IsAuthenticated == true ? "true" : "false");

        // jeśli z jakiegokolwiek powodu HTML jest zcache’owany, sprawdź stan u źródła:
        document.addEventListener('DOMContentLoaded', async () => {
          try {
            const r = await fetch('/auth/twitch/whoami', { cache: 'no-store' });
            const me = await r.json();

            if (me?.isAuthenticated === true) {
              // schowaj „Zaloguj…”
              const loginItem = document.querySelector('.nav-item a[href="/auth/twitch/login"]')?.closest('.nav-item');
              if (loginItem) loginItem.classList.add('d-none');

              // pokaż „Ulubione klipy”
              const favItem = document.querySelector('[data-nav-favs]');
              if (favItem) favItem.classList.remove('d-none');

              // opcjonalnie – uzupełnij nick i avatar, jeśli HTML był stary:
              const nameSpan = document.querySelector('[data-username]');
              const avatarImg = document.querySelector('[data-avatar]');
              if (nameSpan && me.name) nameSpan.textContent = me.name;
              if (avatarImg && me.avatar) avatarImg.src = me.avatar;
            }
          } catch (e) {
            console.warn('whoami check failed', e);
          }
        });
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
